      "patch": {
        "tags": [
          "User"
        ],
        "summary": "Update user by token",
        "operationId": "updateUser",
        "description": "Update user by token",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "User's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "gender": {
                    "description": "user's gender",
                    "type": "string",
