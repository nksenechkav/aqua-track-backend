          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Joe Bob"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "example@gmail.com"
          }
        }
      },
      "login": {
        "type": "object",
        "required": [
          "accessToken"
